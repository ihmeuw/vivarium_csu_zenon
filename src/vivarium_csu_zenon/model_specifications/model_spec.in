components:
    vivarium_public_health:
        population:
            - BasePopulation()
            - Mortality()
        metrics:
            - DisabilityObserver()
            - MortalityObserver()

#    vivarium_csu_zenon.components:

configuration:
    input_data:
        location: {{ location_proper }}
        input_draw_number: 0
        artifact_path: /share/costeffectiveness/artifacts/vivarium_csu_zenon/{{ location_sanitized }}.hdf
    interpolation:
        order: 0
        extrapolate: False
    randomness:
        map_size: 1_000_000
        key_columns: ['entrance_time', 'age']
        random_seed: 0
    time:
        start:
            year: 2020
            month: 1
            day: 1
        end:
            year: 2024
            month: 12
            day: 31
        step_size: 28 # Days
    population:
        population_size: 10000
        age_start: 30
        age_end: 125
        exit_age: 125

    metrics:
        disability:
            by_age: False
            by_sex: False
            by_year: False
        mortality:
            by_age: False
            by_sex: False
            by_year: False
