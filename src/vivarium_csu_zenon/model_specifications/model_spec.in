components:
    vivarium_public_health:
        population:
            - BasePopulation()
            - Mortality()
        risks:
            - Risk('risk_factor.high_ldl_cholesterol')
            - RiskEffect('risk_factor.high_ldl_cholesterol', 'cause.ischemic_heart_disease.incidence_rate')
            - RiskEffect('risk_factor.high_ldl_cholesterol', 'cause.ischemic_stroke.incidence_rate')
            - Risk('risk_factor.high_systolic_blood_pressure')
            - RiskEffect('risk_factor.high_systolic_blood_pressure', 'cause.ischemic_heart_disease.incidence_rate')
            - RiskEffect('risk_factor.high_systolic_blood_pressure', 'cause.ischemic_stroke.incidence_rate')
        metrics:
            - DisabilityObserver()
            - MortalityObserver()

    vivarium_csu_zenon.components:
        - IschemicHeartDisease()
        - IschemicStroke()
        - DiabetesMellitus()
        - ChronicKidneyDisease()
        - DiseaseObserver('ischemic_heart_disease')
        - DiseaseObserver('ischemic_stroke')
        - DiseaseObserver('diabetes_mellitus')
        - DiseaseObserver('chronic_kidney_disease')

configuration:
    input_data:
        location: {{ location_proper }}
        input_draw_number: 0
        artifact_path: /share/costeffectiveness/artifacts/vivarium_csu_zenon/{{ location_sanitized }}.hdf
    interpolation:
        order: 0
        extrapolate: True
    randomness:
        map_size: 1_000_000
        key_columns: ['entrance_time', 'age']
        random_seed: 0
    time:
        start:
            year: 2020
            month: 1
            day: 1
        end:
            year: 2024
            month: 12
            day: 31
        step_size: 28 # Days
    population:
        population_size: 10000
        age_start: 30
        age_end: 125
        exit_age: 125

    metrics:
        disability:
            by_age: True
            by_sex: True
            by_year: True
        mortality:
            by_age: True
            by_sex: True
            by_year: True
        ischemic_heart_disease_observer:
            by_age: True
            by_sex: True
            by_year: True
        ischemic_stroke_observer:
            by_age: True
            by_sex: True
            by_year: True
        diabetes_mellitus_observer:
            by_age: True
            by_sex: True
            by_year: True
        chronic_kidney_disease_observer:
            by_age: True
            by_sex: True
            by_year: True
